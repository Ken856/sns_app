<h1 class="room-title">
  <% @user_rooms.each do |user_room| %>
    <% if user_room.user != current_user %>
      <%= link_to user_room.user.name, user_room.user %>
    <% end %>
  <% end %>

    <div class="room-destroy">
      <p><%= link_to "消去", room_path(@room.id), method: :delete %> </p>
    </div>
</h1>

<div id="message-container">
  <%= render @messages %>
</div>

<div id="chat-footer">
  <%= render 'chat_footer' %>
</div>
