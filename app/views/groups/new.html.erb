<div class="row">
 <div class-"col">
   <%= form_with model: @room, url: groups_path, local: true do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

   <%= fields_for @group do |af| %>
     <div class="form-group">
       <%= af.label :group_name %>
       <%= af.text_field :group_name %>
     </div>

     <div class="form-group">
       <%= af.label "メンバーを選択する" %>
       <%= af.collection_check_boxes :user_ids, @followings, :id, :name, include_hidden: false do   |b| %>
         <%= b.check_box %>
         <%= b.label %>
       <% end %>
     </div>

     <div class="form-group">
       <%= af.label :group_image %>
       <%= af.file_field :group_image ,class: 'form-control' %>
     </div>

     <% end %>
     <div class="form-group">
       <%= f.submit %>
     </div>
   <% end %>
 </div>
</div>
