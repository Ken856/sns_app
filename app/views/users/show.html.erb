<% provide(:title, "Profile") %>
<div id="profile">
  <div class="show-profile">
      <%= render_to_profile(@user, link_cancel: true) %>
      <%= render "introduction", user: @user %>
  </div>

  <div class="show-edit">
    <%= link_to "Edit", edit_user_path(current_user)  if current_user?(@user)%>
  </div>

  <div class="follow-form">
    <%= render "follow_form" %>
  </div>

  <div class="show-chat">
    <% if !current_user?(@user) && current_user.following?(@user) %>
    <% if personal_chat_room(current_user, @user) %>
    <%= link_to "TALK", room_path(@room) %>
    <% else %>
    <%= render "rooms/room_form" %>
    <% end %>
    <% end %>
  </div>
</div>
