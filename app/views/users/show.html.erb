<% provide(:title, "Profile") %>
<div id="profile">
  <h1><%= @user.name %></h1>

  <div class="profile-avatar">
    <%= render "shared/image", info: @user, image: :avatar, default_image: "default_user.png" %>
  </div>

  <div class="profile-edit">
    <%= link_to "Edit", edit_user_path(current_user)  if current_user?(@user)%>
  </div>

  <div class="follow-form">
    <%= render "follow_form" %>
  </div>

  <div class="profile-chat">
    <% if !current_user?(@user) && current_user.following?(@user) %>
    <% if @room %>
    <%= link_to "TALK", room_path(@room) %>
    <% else %>
    <%= render "rooms/room_form" %>
    <% end %>
    <% end %>
  </div>
</div>
