<% provide(:title, "SIGN UP") %>
<h1>新規登録</h1>

<div class="row">
 <div class-"col">
   <%= form_with model: @user, local: true do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

   <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field :name %>
   </div>

   <div class="form-group">
     <%= f.label :email %>
     <%= f.email_field :email %>
   </div>

   <div class="form-group">
     <%= f.label :password %>
     <%= f.password_field :password %>
   </div>

   <div class="form-group">
     <%= f.label :password_confirmation %>
     <%= f.password_field :password_confirmaton %>
   </div>

   <div class="form-group">
     <%= f.submit "登録" %>
   </div>
  <% end %>

 </div>
</div>
