<% provide(:title, "Top") %>
<div id="top">
  <h1>Your Profile</h1>

  <div class="top-user-info">
    <div class="profile-wrap">
      <%= render_to_profile(@user) %>
      <%= render "introduction", user: @user %>
    </div>
  </div>

  <div class="top-groups">
    <h1 class="groups-title">Groups</h1>
    <%= render "groups" %>
  </div>

  <div class="top-friends">
    <h1 class="friends-title">Your Friends</h1>
    <div class="friends-search-form">
      <%= render "search_form" %>
    </div>
    <div class="search-result">

    </div>
    <%= render "friends" %>
  </div>
</div>
